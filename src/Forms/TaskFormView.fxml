<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.geometry.Insets?>
<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXToggleButton?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Forms.TaskFormController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox xmlns:fx="http://javafx.com/fxml" fx:id="taskFormGrid">

        <HBox>
            <Label fx:id="title" text="Add new Task">
                <font>
                    <Font name="Arial" size="25"></Font>
                </font>
            </Label>
        </HBox>
        <HBox>
            <Label text="Name" prefHeight="40" prefWidth="100"></Label>
            <JFXTextField fx:id="name" prefWidth="300" prefHeight="40"/>
        </HBox>
        <HBox>
            <Label text="Description" prefHeight="40" prefWidth="100"></Label>
            <JFXTextField fx:id="description" prefWidth="300" prefHeight="40"/>
        </HBox>
        <HBox>
            <Label text="Open" prefHeight="40" prefWidth="100"></Label>
            <JFXTextField fx:id="open" prefWidth="300" prefHeight="40"/>
        </HBox>
        <HBox>
            <JFXToggleButton fx:id="closeTask" size="12.0" text="Close Task" toggleColor="#fafafa" toggleLineColor="#d70505" unToggleLineColor="#08f21b" wrapText="true" onAction="#on"/>
        </HBox>

        <padding>
            <Insets top="20" right="0" bottom="0" left="0"/>
        </padding>
        <JFXButton onAction="#processForm" fx:id="submitButton" text="Add Task" buttonType="FLAT" prefWidth="200"
                   prefHeight="40" style="-fx-background-color: #0275d8; -fx-text-fill: white;">
            <padding>
                <Insets top="8" right="20" bottom="8" left="20"/>
            </padding>
        </JFXButton>
    </VBox>

</AnchorPane>
